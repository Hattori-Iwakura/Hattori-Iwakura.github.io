---
import { AUTHOR_NAME, AUTHOR_GITHUB, AUTHOR_EMAIL } from "../consts";
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-section">
			<h3>{AUTHOR_NAME}</h3>
			<p>Software Engineering Student | Learning AI & Full-Stack</p>
			<p style="font-size: 0.9em; margin-top: 1em;">
				A final-year student passionate about AI/Machine Learning and
				Full-Stack Development. Building intelligent applications and
				exploring modern web technologies.
			</p>
		</div>

		<div class="footer-section">
			<h4>Quick Links</h4>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/about">About</a></li>
				<li><a href="/blog">Blog</a></li>
			</ul>
		</div>

		<div class="footer-section">
			<h4>Connect</h4>
			<div class="social-links">
				<a href={AUTHOR_GITHUB} target="_blank" title="GitHub">
					<span class="sr-only">GitHub Profile</span>
					<svg
						viewBox="0 0 16 16"
						aria-hidden="true"
						width="28"
						height="28"
						><path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path></svg
					>
				</a>
				<a href={`mailto:${AUTHOR_EMAIL}`} title="Email">
					<span class="sr-only">Email</span>
					<svg
						viewBox="0 0 16 16"
						aria-hidden="true"
						width="28"
						height="28"
					>
						<path
							fill="currentColor"
							d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"
						></path>
					</svg>
				</a>
			</div>
		</div>
	</div>

	<div class="footer-bottom">
		<p>&copy; {today.getFullYear()} {AUTHOR_NAME}. All rights reserved.</p>
		<p style="font-size: 0.9em; margin-top: 0.5em;">
			Built with <a
				href="https://astro.build/"
				target="_blank"
				style="color: var(--accent);">Astro</a
			>
		</p>
	</div>
</footer>
<style>
	footer {
		padding: 4em 2em 2em;
		background: var(--bg-secondary);
		border-top: 1px solid var(--border-color);
		color: var(--text-secondary);
		margin-top: 4em;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 3em;
		margin-bottom: 3em;
	}

	.footer-section h3 {
		font-size: 1.5em;
		margin-bottom: 0.5em;
		color: var(--accent-light);
	}

	.footer-section h4 {
		font-size: 1.2em;
		margin-bottom: 1em;
		color: var(--accent-light);
	}

	.footer-section p {
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-section ul li {
		margin-bottom: 0.8em;
	}

	.footer-section ul li a {
		color: var(--text-secondary);
		text-decoration: none;
		transition: all 0.3s ease-in-out;
	}

	.footer-section ul li a:hover {
		color: var(--accent-purple);
		padding-left: 5px;
	}

	.footer-section ul li a::after {
		display: none;
	}

	.social-links {
		display: flex;
		gap: 1.5em;
		margin-top: 1em;
	}

	.social-links a {
		text-decoration: none;
		color: #9ca3af;
		transition: all 0.3s ease-in-out;
		display: inline-flex;
	}

	.social-links a:hover {
		color: #8b5cf6;
		transform: translateY(-3px);
	}

	.social-links a::after {
		display: none;
	}

	.footer-bottom {
		text-align: center;
		padding-top: 2em;
		border-top: 1px solid #262626;
		color: #6b7280;
	}

	.footer-bottom p {
		margin: 0;
	}

	.footer-bottom a {
		color: #8b5cf6;
		text-decoration: none;
		font-weight: 600;
	}

	.footer-bottom a:hover {
		text-decoration: underline;
	}

	.footer-bottom a::after {
		display: none;
	}

	@media (max-width: 768px) {
		footer {
			padding: 3em 1.5em 2em;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 2.5em;
		}

		.footer-section h3 {
			font-size: 1.3em;
		}

		.footer-section h4 {
			font-size: 1.1em;
		}
	}

	@media (max-width: 480px) {
		footer {
			padding: 2.5em 1em 1.5em;
		}

		.footer-content {
			gap: 2em;
		}

		.footer-section h3 {
			font-size: 1.2em;
		}

		.footer-section p {
			font-size: 0.9em;
		}

		.social-links {
			gap: 1.2em;
		}

		.social-links a svg {
			width: 24px;
			height: 24px;
		}

		.footer-bottom {
			font-size: 0.9em;
		}
	}
</style>
